<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?scenebuilder-preview-i18n-resource messagedialog.properties?>

<BorderPane fx:id="messageDialog" styleClass="message-dialog" minWidth="200" minHeight="50" xmlns:fx="http://javafx.com/fxml" fx:controller="ca.qc.ircm.util.javafx.message.MessageDialogPresenter">
	<center>
		<ScrollPane fx:id="scrollPane">
			<VBox fx:id="messageBox" styleClass="messages"/>
		</ScrollPane>
	</center>
	<bottom>
		<HBox styleClass="buttons">
			<Button fx:id="ok" text="%ok" onAction="#close" defaultButton="true" cancelButton="true"/>
		</HBox>
	</bottom>
</BorderPane>
